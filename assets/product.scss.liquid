.product-single__title{
	margin-top: 16px;
  font-size: 20px;
}

@media only screen and (max-width: 700px){
  
  #MainContent {
    margin-top: 36px;
  }
  
  .header-layout .announcement{
  	display: none;
  }
  
  .product__quantity{
  	display: none;
  }
  
  #attentive_overlay{
  	display: none;
  }
  
  .variant__label{
  	margin-bottom: 4px;
  }
  
  .variant-input-wrap label{
  	margin-bottom: 0;
  }
  
  .product-offers .variant-input-wrap{
  	margin-bottom: 8px;
  }
  
  .product-offers .affirm-as-low-as{
  	margin-bottom: 4px;
    font-size: 15px;
    position: relative;
  }

  
  .affirm-modal-trigger{
    opacity: 0;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
  }
  
  .product-offers .reviewWrap{
  	order: -1;
  }
  
  .product__price{
    order: -1;
    font-family: 'Lora', serif;
  }
  
  .shippingInfo{
  	margin: 8px 0;
  }
  
  .product-single__meta .social-sharing {
  	margin-top: 0 !important;
    margin-bottom: 8px !important;
  }
  
  .product-offers .hr--medium {
  	margin: 0 auto;
  }
  
  .product-section .pdpIcons{
  	margin-bottom: 0 !important;
  }
  
  .product-single__title{
  	order: -1; 
    margin: 0;
    font-weight: 400;
    font-size: 18px;
    margin-bottom: 8px;
  }
  
  .mobile-swiper.swiper-container{
  	height: 330px;
  }
  
}

.align-items-center{
  > .shg-row {
    align-items: center !important;
  }
}
