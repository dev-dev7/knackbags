                    {% endif %}
                    {% if section.settings.video_url_2.type == "vimeo" %}
                      <iframe src="//player.vimeo.com/video/{{ section.settings.video_url_2.id }}?color={{ settings.color_button | remove: "#" }}&byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                    {% endif %}
                {% endif %}
            </div>
          </div>
          <div class="tab-content" style="display: none;">
