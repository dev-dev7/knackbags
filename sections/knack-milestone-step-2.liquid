{% schema %}
  {
    "name": "Step 2",
    "settings": [
    {
    "type": "textarea",
    "id": "thanks",
    "label": "Thanks Messaging",
    "default": "Thank you for connecting!<br><br>Don’t leave your friends behind!"
    },
    {
    "type": "textarea",
    "id": "welcome_back",
    "label": "Welcome Back Messaging",
    "default": "Welcome back!<br><br>Don’t leave your friends behind!"
    },
    {
    "type": "textarea",
    "id": "heading",
    "label": "Heading",
    "default": "INVITE FRIENDS &amp; EARN PRODUCT"
    },
    {
    "type": "textarea",
    "id": "copy",
    "label": "Share Messaging",
    "default": "Share your personal link via email or social channel and earn Knack gear when your friends sign up."
    },
    {
      "type": "text",
      "id": "rules_link",
      "label": "Rules Link",
      "default": "Referral Program Rules"
    },
    {
      "type": "text",
      "id": "rules_title",
      "label": "Rules Title",
      "default": "Referral Program Rules"
    },
    {
      "type": "html",
      "id": "rules_content",
      "label": "Rules Content",
      "default": "Referral Program Rules"
    },
      {
        "type": "video_url",
        "id": "video_url_1",
        "label": "His video link",
        "accept": ["youtube", "vimeo"]
      },
        {
        "type": "video_url",
        "id": "video_url_2",
        "label": "Her video link",
        "accept": ["youtube", "vimeo"]
      },
        {
        "type": "video_url",
        "id": "video_url_3",
        "label": "Cube video link",
        "accept": ["youtube", "vimeo"]
      }
    ]
  }
{% endschema %}

