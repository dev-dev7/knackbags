    <div id="progress_container" class="clearfix" style="display: none;">
      <div class="contentLeft">
          <div class="logo">
            {{ 'knack_logo_vert.png' | asset_url | img_tag: 'Logo', 'logo' }}
          </div>
          <div>
              <div id="thanksMessage">{{ section.settings.thanks }}</div>
              <div id="welcomeBackMessage" style="display: none;"><div id="welcomeBackMessageText" class="row">{{ section.settings.welcome_back }}</div><div class="row"></div>
                  <div id="welcomeBackMessageLogout" style="position: fixed; top: 8px; right: 16px; text-align: right; font-size: 14px;">
                      <div class="layout horizontal mobile-stack">
                          <div id="logoutLabel">Not you?</div><div class="no-mobile">&nbsp;</div><a id="logoutLink" style="cursor: pointer; font-weight: 500">logout</a>
                      </div>
                  </div>
              </div>

              <h1>{{ section.settings.heading }}</h1>
              <p>
                  {{ section.settings.copy }}
              </p>
          </div>
          <div>
              {{ page.content }}
          </div>
          <div class="formWrap">
              <input type="text" id="vlCopyInput" class="form-control shareUrl" value="" readonly="" @focus="$event.target.select()">
