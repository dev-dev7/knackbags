<script>

    window.product = window.product || {};

    $(document).ready(function(){

        window.product.medium = {
            variants: {
                {% for variant in product.variants %}
                    '{{ variant.option1 }}': '{{ variant.id }}',
                {% endfor %}
            }
        }


        $('.prodWrap.medium .prod-images > .product-image:eq(0)').show();

        $('.prodHori .prodWrap.medium .prod-images .slick-dots li').click(function(event){
            $('.prodHori .prodWrap.medium .prod-images .slick-dots li').removeClass("slick-active");
            $(this).addClass("slick-active");
            $('.prodWrap.medium .prod-images > .product-image').hide();
            $('.prodWrap.medium .prod-images > .product-image:eq('+$(this).index()+')').show();

            variantId = window.product.medium.variants[$(this).attr('data')];

            $('.prodWrap.medium .shop-now-link').attr('href', '{{product.url}}?variant=' + variantId) ;
        });
    });


</script>