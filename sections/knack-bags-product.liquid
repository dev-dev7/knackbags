<div class="prodWrap medium">
    <h2>{{section.settings.product_heading}}</h2>
    <span class="price">{{section.settings.product_price}}</span>
    <div class="prod-images">
    {% for product_option in product.options_with_values %}
      {% for value in product_option.values %}
      	{% if value != "LIMITED EDITION COLOR - Burnt Orange" and value != "Loden Green" %}
            {% assign image = value | split: ' ' | last | handle | append: '_angle.jpg' %}
            <div class="product-image" style="display: none;"><a class="shop-now-link" href="{{product.url}}">{{ 'md_knack_' | append: image | file_img_url: '200x300' | img_tag: '', 'no-hover' }}<img class="hover" src="{{section.settings.product_image_1_hover | img_url: '200x300'}}"/></a></div>
      	{% endif %}
      {% endfor %}

      {% endfor %}
    <ul class="slick-dots">
      {% for product_option in product.options_with_values %}
        {% for value in product_option.values %}
          {% if value != "LIMITED EDITION COLOR - Burnt Orange" and value != "Loden Green" %}
            {% assign image = value | append: '_swatch' | split: ' ' | last | handle | append: '.jpg' %}
            <li class="swatch" data="{{value}}">{{ image | asset_img_url: '24x' | img_tag: '', 'swatch' }}</li>
      	  {% endif %}
        {% endfor %}

      {% endfor %}
    </ul>
    </div>
    <a class="shop-now-link btn-primary" href="{{product.url}}">{{section.settings.product_button}}</a>
    <div class="shipping">
      <p>{{section.settings.free_shipping}}</p>
      <p>{{section.settings.fast_shipping}}</p>
    </div>
    <div class="prodDetails">
      <p class="description">{{section.settings.product_description}}</p>
