  <script>
    $(document).ready(function(){
      $('#productTabs .tab-label').click(function(event){
        let selectedIndex = $('#productTabs .tab-label').index(this);
        $('#productTabs .tab-label').removeClass('selected');
        $('#productTabs .tab-content').hide();
        $('#productTabs .tab-label:eq('+selectedIndex+')').addClass('selected');
        $('#productTabs .tab-content:eq('+selectedIndex+')').show();
      });
    });
  </script>


      <div id="productTabs" class="tabs">
        <div class="tab-labels">
          <span class="tab-label selected">{{ section.settings.tab_1_label }}</span>
          <span class="tab-label">{{ section.settings.tab_2_label }}</span>
          <span class="tab-label">{{ section.settings.tab_3_label }}</span>
        </div>
        <div class="tab-contents">
          <div class="tab-content">{{ section.settings.tab_1_content }}</div>
          <div class="tab-content" style="display: none;">{{ section.settings.tab_2_content }}</div>
          <div class="tab-content" style="display: none;">{{ section.settings.tab_3_content }}</div>
        </div>
      </div>



