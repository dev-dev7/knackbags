<div class="grid-x align-center centerText">
  <div class="cell medium-8 small-11">
  	<h2>{{section.settings.heading}}</h2>
    <p>{{section.settings.description}}</p>
    <div class="social">
      <a class="socialBtn facebook" href="{{section.settings.facebook_button_url}}" target="_blank"><i class="fab fa-facebook-f"></i></a>
      <a class="socialBtn twitter" href="{{section.settings.twitter_button_url}}" target="_blank"><i class="fab fa-twitter"></i></a>    
      <a class="socialBtn instagram" href="{{section.settings.instagram_button_url}}" target="_blank"><i class="fab fa-instagram"></i></a>
    </div>
  </div>
</div>

{% schema %}
  {
	"name": "Bottom Content",
	"class": "communityContent",
    "settings": [
		{
        "type": "header",
        "content": "Content"
      },
		{
        "type": "text",
        "id": "heading",
        "label": "Heading",
		"default": "heading"
      },
		{
        "type": "html",
        "id": "description",
        "label": "description",
		"default": "description"
      },
  		{
  			"type": "url",
  			"id": "facebook_button_url",
  			"label": "Facebook Link"
  		},
  		{
  			"type": "url",
  			"id": "twitter_button_url",
  			"label": "Twitter Link"
  		},
  		{
  			"type": "url",
  			"id": "instagram_button_url",
  			"label": "Instagram Link"
  		}
	]
  }
{% endschema %}
