
<div id="widgets_container" style="display: none;">
  <div class="logo">
    {{ 'knack_logo_hori.png' | asset_url | img_tag: 'Knack Bags' }}
  </div>  
  <div class="splitBanner">
    {{ 'split_banner.jpg' | asset_url | img_tag: 'Knack Bags', 'banner' }}
    {{ 'split_banner_mobile.jpg' | asset_url | img_tag: 'Black Knack Bag', 'bannerMobile' }}
  </div>
  <div class="page-width">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.copy }}</p>
    {{ 'key_icon.png' | asset_url | img_tag: 'Step Inside', 'key' }}
    <span>{{ section.settings.sub_copy }}</span>
    <form method="post" action="/contact#contact_form" id="referral_contact_form" accept-charset="UTF-8" class="contact-form"><input type="hidden" name="form_type" value="customer"><input type="hidden" name="utf8" value="✓">
      <div style="display: none;"></div>
      <p class="password-page__form-heading">{{ section.settings.referral_form_heading }}</p>
      <input type="hidden" name="contact[tags]" value="prospect, prelaunch, referral">
      <label for="email" class="hidden-label">Email</label>
      <div class="password-page__signup-form vl-signup layout horizontal phone-stack">
        <div class="flex">
          <input type="text" name="contact[fname]" id="firstName" class="input-group-field firstname" placeholder="{{ section.settings.name_label }}">
        </div>
        <div class="flex">
          <input type="text" name="contact[lname]" id="lastName" class="input-group-field lastname" placeholder="{{ section.settings.lastname_label }}">
        </div>        
        <div class="flex">
          <input type="text" name="contact[email]" id="email" class="input-group-field" placeholder="{{ section.settings.email_label }}">
        </div>
        <input type="submit" name="contact[submit]" class="password-page__signup-form__submit stepInside"  value="{{ section.settings.button_label }}">
      </div>
    </form>
    <div class="member">
       Already have an account?&nbsp;<a data-remodal-target="signInModal" href="#">Sign in</a>
    </div>    
    <em>{{ section.settings.note }}</em>
    <p class="agree">By clicking Step Inside, you agree to our <a data-remodal-target="termsModal" href="#">Terms</a> and <a data-remodal-target="privacyModal" href="#">Privacy Policy</a></p>

  </div>
 	<div class="page-width">
      <div class="align-center">
        <div class="cell small-11">
      <div id="videoTabs" class="tabs">
        <div class="tab-labels layout horizontal">
          <div class="flex"></div>
          <span class="tab-label selected">Pack for Him</span>
          <div style="width: 32px;"></div>
          <span class="tab-label">Pack for Her</span>
          <div style="width: 32px;"></div>
          <span class="tab-label">Use a Cube</span>
          <div class="flex"></div>
        </div>
        <div class="tab-contents">
          <div class="tab-content">
            <div class="video-wrapper">
                {% if section.settings.video_url_1 == blank %}
                  <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                {% else %}
                    {% if section.settings.video_url_1.type == "youtube" %}
                      <iframe src="//www.youtube.com/embed/{{ section.settings.video_url_1.id }}?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                    {% endif %}
                    {% if section.settings.video_url_1.type == "vimeo" %}
                      <iframe src="//player.vimeo.com/video/{{ section.settings.video_url_1.id }}?color={{ settings.color_button | remove: "#" }}&byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                    {% endif %}
                {% endif %}
            </div>
          </div>
          <div class="tab-content" style="display: none;">
            <div class="video-wrapper">
                {% if section.settings.video_url_2 == blank %}
                  <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                {% else %}
                    {% if section.settings.video_url_2.type == "youtube" %}
                      <iframe src="//www.youtube.com/embed/{{ section.settings.video_url_2.id }}?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                    {% endif %}
                    {% if section.settings.video_url_2.type == "vimeo" %}
                      <iframe src="//player.vimeo.com/video/{{ section.settings.video_url_2.id }}?color={{ settings.color_button | remove: "#" }}&byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                    {% endif %}
                {% endif %}
            </div>
          </div>
          <div class="tab-content" style="display: none;">
            <div class="video-wrapper">
                {% if section.settings.video_url_3 == blank %}
                  <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                {% else %}
                    {% if section.settings.video_url_3.type == "youtube" %}
                      <iframe src="//www.youtube.com/embed/{{ section.settings.video_url_3.id }}?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                    {% endif %}
                    {% if section.settings.video_url_3.type == "vimeo" %}
                      <iframe src="//player.vimeo.com/video/{{ section.settings.video_url_3.id }}?color={{ settings.color_button | remove: "#" }}&byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                    {% endif %}
                {% endif %}
            </div>
          </div>          
        </div>
      </div>
        </div>
      </div>
  </div> 
</div>


<div class="preloader">
  <div class="sk-circle">
    <div class="sk-circle1 sk-child"></div>
    <div class="sk-circle2 sk-child"></div>
    <div class="sk-circle3 sk-child"></div>
    <div class="sk-circle4 sk-child"></div>
    <div class="sk-circle5 sk-child"></div>
    <div class="sk-circle6 sk-child"></div>
    <div class="sk-circle7 sk-child"></div>
    <div class="sk-circle8 sk-child"></div>
    <div class="sk-circle9 sk-child"></div>
    <div class="sk-circle10 sk-child"></div>
    <div class="sk-circle11 sk-child"></div>
    <div class="sk-circle12 sk-child"></div>
  </div>
</div>

<div class="remodal" data-remodal-id="signInModal" data-remodal-options="hashTracking: false, closeOnOutsideClick: true">
    <button data-remodal-action="close" class="remodal-close"></button>
  <div class="widgets_container">
    <form method="post" action="/contact#contact_form"  id="referral_login_form" accept-charset="UTF-8" class="contact-form">
      <label for="email" class="hidden-label">Email</label>
      <div class="password-page__signup-form vl-signup layout horizontal phone-stack">
        <div class="flex">
          <input type="text" name="email" class="input-group-field" placeholder="{{ section.settings.email_label }}">
        </div>
        <input id="signIn" type="submit" name="contact[submit]" class="password-page__signup-form__submit stepInside"  value="{{ section.settings.button_label }}">
      </div>
    </form>
  </div>
</div>

<div class="remodal" data-remodal-id="termsModal"
  data-remodal-options="hashTracking: false, closeOnOutsideClick: true">

  <button data-remodal-action="close" class="remodal-close"></button>
  <h4>{{ section.settings.terms_title }}</h4>
  <p>{{ section.settings.terms_content }}</p>
</div>

<div class="remodal" data-remodal-id="privacyModal"
  data-remodal-options="hashTracking: false, closeOnOutsideClick: true">

  <button data-remodal-action="close" class="remodal-close"></button>
  <h4>{{ section.settings.privacy_title }}</h4>
  <p>{{ section.settings.privacy_content }}</p>
</div>

{% schema %}
{
  "name": "Step 1",
  "settings": [
  {
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "ONE BAG LIFE IS HERE."
  },
  {
    "type": "textarea",
    "id": "copy",
    "label": "Copy",
    "default": "Go from the boardroom to the boardwalk (and everywhere in between) without stopping to repack. Knack is coming."
  },
  {
    "type": "textarea",
    "id": "sub_copy",
    "label": "Sub Copy",
    "default": "Be the first to know"
  },
  {
    "type": "textarea",
    "id": "name_label",
    "label": "Name Label",
    "default": "First Name*"
  },
  {
    "type": "textarea",
    "id": "lastname_label",
    "label": "Last Name Label",
    "default": "Last Name*"
  },
  {
    "type": "textarea",
    "id": "email_label",
    "label": "Email Label",
    "default": "Email*"
  },
  {
    "type": "text",
    "id": "button_label",
    "label": "Button Label",
    "default": "Step Inside"
  },
  {
    "type": "textarea",
    "id": "note",
    "label": "Note",
    "default": "P.S. Yes, it’s really true: our bags hold all of your stuff for work AND all of your stuff for travel."
  },
    {
      "type": "text",
      "id": "terms_title",
      "label": "Terms Title",
      "default": "Terms"
    },
    {
      "type": "html",
      "id": "terms_content",
      "label": "Terms Content"
    },
    {
      "type": "text",
      "id": "privacy_title",
      "label": "Privacy Policy Title",
      "default": "Privacy Policy"
    },
    {
      "type": "html",
      "id": "privacy_content",
      "label": "Privacy Policy Content"
    },
      {
        "type": "video_url",
        "id": "video_url_1",
        "label": "His video link",
        "accept": ["youtube", "vimeo"]
      },
        {
        "type": "video_url",
        "id": "video_url_2",
        "label": "Her video link",
        "accept": ["youtube", "vimeo"]
      },
        {
        "type": "video_url",
        "id": "video_url_3",
        "label": "Cube video link",
        "accept": ["youtube", "vimeo"]
      },
      {
        "type": "text",
        "id": "video_url",
        "label": "Background video link",
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "info": "Supports YouTube, .MP4 and Vimeo. Not all features supported by Vimeo. [Learn more](https://archetypethemes.co/blogs/motion/how-do-i-add-background-videos)"
      }
]
}
