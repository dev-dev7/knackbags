{% endstylesheet %}

{% javascript %}

{% endjavascript %}

<style>
    .knack-home-instagram-callouts .btn{
        min-width: 100px;
    }

    .knack-home-instagram-callouts .tile{
        box-shadow: 0 8px 12px 0 rgba(0,0,0,0.16);
        margin: .25em;
    }

    .knack-home-instagram-callouts .ig-handle{
        color: #000000;
        font-family: 'Work Sans', sans-serif;
        font-size: .8rem;
        font-weight: 300;
    }

    .knack-home-instagram-callouts .btn-outline-primary{
        border-radius: 4px;
        font-family: Work Sans, "HelveticaNeue","Helvetica Neue",sans-serif;
        font-size: .75rem;
        font-weight: 500;
        text-align: center;
        padding: .5rem;
        text-transform: uppercase;
    }

    .knack-home-instagram-callouts .header{

    }

    .knack-home-instagram-callouts .fancy-line{
        width: 10vw;
        height: 2px;
        background-color: #A79D96;
    }

    .knack-home-instagram-callouts h2{
        color: #000000;
        font-family: Lora;
        font-size: 1.25rem;
        font-style: italic;
        text-align: center;
        display: block;
        line-height: 4rem;
        margin-bottom: 0 !important;
        padding: 1rem;
    }
</style>
<div class="grid-container container-lg knack-home-instagram-callouts" id="section-{{ section.id }}">
    <div class="row header">
        <div class="d-flex flex-row align-items-center w-100">
            <div class="flex-grow-1"></div>
            <div class="fancy-line"></div>
            <h2>#OneBagLife</h2>
            <div class="fancy-line"></div>
            <div class="flex-grow-1"></div>
        </div>

    </div>
    <div class="p-1">
        <div class="row">
            {% for block in section.blocks %}
                <div class="col-12 col-md-4 p-2" {{ block.shopify_attributes }}>
                    <div class="tile">
                        <img class="w-100" src="{{ block.settings.image | img_url: '400x400' }}" width="400" height="400">
                        <div class="d-flex flex-row align-items-center p-2">
                            <span class="flex-grow-1 ig-handle"> {{ block.settings.instagram_handle }}</span>
                            <a class="btn btn-outline-primary" href="{{ block.settings.primary_link_target }}">{{ block.settings.primary_link_label }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
{
"name": "Instagram Callout",
"class": "home-instagram-callouts",
"blocks": [{
"type": "instagram_callout",
"name": "Instagram Callout",
"limit": 3,
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "instagram_handle",
"label": "Instagram Handle",
"default": "@someone"
},
{
"type": "text",
"id": "primary_link_label",
"label": "Link Label",
"default": "Optional button"
},
{
"type": "url",
"id": "primary_link_target",
"label": "Link Target"
}
]
}],

"presets": [{
"name": "Instagram",
"category": "Version 3"
}]
}
{% endschema %}
