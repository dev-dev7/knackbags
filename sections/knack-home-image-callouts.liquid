<style>
    .knack-home-image-callouts .arrow-link {
        border-bottom: 3px solid #F0AB00;
        text-transform: uppercase;
        font-family: Work Sans, "HelveticaNeue", "Helvetica Neue", sans-serif;
        font-size: .880rem;
        font-weight: 500;
        color: #303030;
        display: block;
        padding: .40rem 0 0.25rem 0;
        margin: .5rem 0;
      	line-height: 1rem;
    }
  
  .knack-home-image-callouts .arrow-link .arrow{
  	font-size: .6rem;
    line-height: 1rem;
  }
  
  @media only screen and (min-width: 700px) {
    
  }
  
  @media only screen and (min-width: 1000px) {
    .knack-home-image-callouts .arrow-link {
      font-size: 1rem;
      line-height: 1.25rem;
    }
    
    .knack-home-image-callouts .arrow-link .arrow{
      font-size: .8rem;
      line-height: 1.25rem;
    }
  }
  
  @media only screen and (min-width: 1200px) {
  	
  
  }
</style>
<div class="grid-container container-lg knack-home-image-callouts" id="section-{{ section.id }}">
    <div class="row">
        {% for block in section.blocks %}
            <div class="col-12 col-md-4 p-2" {{ block.shopify_attributes }}>
              	<a href="{{ block.settings.primary_link_target }}"><img class="w-100" width="440" height="260" src="{{ block.settings.image | img_url: '400x400' }}"></a>
              	<a class="arrow-link" href="{{ block.settings.primary_link_target }}">{{ block.settings.primary_link_label }} <span class="arrow">&#9654;</span></a>
            </div>
        {% endfor %}
    </div>
</div>


{% schema %}
  {
    "name": "Image Callouts",
    "class": "home-image-callouts",
    "blocks": [{
        "type": "image_callout",
        "name": "Image Callout",
        "limit": 3,
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
            "type": "text",
            "id": "primary_link_label",
            "label": "Link Label",
            "default": "Optional button"
            },
            {
            "type": "url",
            "id": "primary_link_target",
            "label": "Link Target"
            }
        ]
    }],

    "presets": [{
      "name": "Image Callouts",
      "category": "Version 3"
    }]
  }
{% endschema %}
