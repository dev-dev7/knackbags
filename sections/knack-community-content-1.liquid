
<div class="grid-x align-center centerText">
  <div class="cell medium-8 small-11">
  	<h2>{{section.settings.heading}}</h2>
    <p>{{section.settings.description}}</p>
  </div>
</div>

{% schema %}
  {
	"name": "Top Content",
	"class": "communityContent",
    "settings": [
		{
        "type": "header",
        "content": "Content"
      },
		{
        "type": "text",
        "id": "heading",
        "label": "Heading",
		"default": "heading"
      },
		{
        "type": "html",
        "id": "description",
        "label": "description",
		"default": "description"
      }
	]
  }
{% endschema %}

